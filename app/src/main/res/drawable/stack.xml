<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="16dp"
        android:left="16dp"
        android:right="16dp"
        android:top="16dp">
        <rotate
            android:fromDegrees="2"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="2">
            <shape android:shape="rectangle">
                <solid android:color="#20000000" />
            </shape>
        </rotate>
    </item>
    <item
        android:bottom="16dp"
        android:left="16dp"
        android:right="16dp"
        android:top="16dp">
        <rotate
            android:fromDegrees="4"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="4">
            <shape android:shape="rectangle">
                <solid android:color="#18000000" />
            </shape>
        </rotate>
    </item>

    <item
        android:bottom="16dp"
        android:left="16dp"
        android:right="16dp"
        android:top="16dp">
        <rotate
            android:fromDegrees="6"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="6">
            <shape android:shape="rectangle">
                <solid android:color="#10000000" />
            </shape>
        </rotate>
    </item>
</layer-list>